<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <body>
        <referenceContainer name="content">
            <block class="Iweb\Support\Block\Adminhtml\Ticket\Grid\Container" name="support_ticket_grid">
                <block class="Magento\Backend\Block\Widget\Grid" name="support_ticket_grid.grid" as="grid">
                    <arguments>
                        <argument name="id" xsi:type="string">id</argument>
                        <argument name="dataSource" xsi:type="object">Iweb\Support\Model\ResourceModel\Ticket\Collection</argument>
                        <argument name="default_sort" xsi:type="string">id</argument>
                        <argument name="default_dir" xsi:type="string">ASC</argument>
                        <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\Massaction" name="support.ticket.grid.massactions" as="grid.massaction">
                            <arguments>
                                <argument name="massaction_id_field" xsi:type="string">id</argument>
                                <argument name="form_field_name" xsi:type="string">id</argument>
                                <argument name="use_select_all" xsi:type="string">1</argument>
                                <argument name="options" xsi:type="array">
                                    <item name="hide" xsi:type="array">
                                        <item name="label" xsi:type="string" translate="true">Close Ticket</item>
                                        <item name="url" xsi:type="string">iweb_support/ticket/massClose/</item>
                                        <item name="visible" xsi:type="object">\Iweb\Support\Block\Adminhtml\Ticket\VisibilityChecker</item>
                                    </item>
                                    <item name="show" xsi:type="array">
                                        <item name="label" xsi:type="string" translate="true">Activate Ticket</item>
                                        <item name="url" xsi:type="string">iweb_support/ticket/massActivate/</item>
                                        <item name="visible" xsi:type="object">\Iweb\Support\Block\Adminhtml\Ticket\VisibilityChecker</item>
                                    </item>
                                    <item name="delete" xsi:type="array">
                                        <item name="label" xsi:type="string" translate="true">Delete</item>
                                        <item name="url" xsi:type="string">iweb_support/ticket/massDelete/</item>
                                        <item name="confirm" xsi:type="string" translate="true">Are you sure you want to delete these items?</item>
                                    </item>
                                </argument>
                            </arguments>
                        </block>
                    <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" name="support_ticket_grid.grid.columnSet" as="grid.columnSet">
                        <arguments>
                            <argument name="rowUrl" xsi:type="array">
                                <item name="path" xsi:type="string">*/*/view</item>
                            </argument>
                        </arguments>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">ID</argument>
                                <argument name="index" xsi:type="string">id</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="customer_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Customer Name</argument>
                                <argument name="index" xsi:type="string">customer_id</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                                <argument name="renderer" xsi:type="string">Iweb\Support\Block\Adminhtml\Ticket\Grid\Column\Renderer\CustomerId</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="title">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Title</argument>
                                <argument name="index" xsi:type="string">title</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="description">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Description</argument>
                                <argument name="index" xsi:type="string">description</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="created_at">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Created</argument>
                                <argument name="index" xsi:type="string">created_at</argument>
                                <argument name="type" xsi:type="string">datetime</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="updated_at">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Modified</argument>
                                <argument name="index" xsi:type="string">updated_at</argument>
                                <argument name="type" xsi:type="string">datetime</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="replies">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Replies</argument>
                                <argument name="index" xsi:type="string">support_id</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                                <argument name="renderer" xsi:type="string">Iweb\Support\Block\Adminhtml\Reply\Grid\Column\Renderer\Replies</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="status">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Status</argument>
                                <argument name="index" xsi:type="string">status</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" name="action">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Action</argument>
                                <!--<argument name="index" xsi:type="string">catalog</argument>-->
                                <argument name="type" xsi:type="string">action</argument>
                                <argument name="getter" xsi:type="string">getId</argument>
                                <argument name="filter" xsi:type="string">0</argument>
                                <argument name="sortable" xsi:type="string">0</argument>
                                <argument name="actions" xsi:type="array">
                                    <item name="edit_action" xsi:type="array">
                                        <item name="caption" xsi:type="string" translate="true">View</item>
                                        <item name="url" xsi:type="array">
                                            <item name="base" xsi:type="string">*/*/view</item>
                                        </item>
                                        <item name="field" xsi:type="string">support_id</item>
                                    </item>
                                </argument>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>